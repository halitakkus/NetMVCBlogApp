@model NetMVCBlogApp.Models.AdminModel
@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Profile</h4>
                </div>
                <div class="content">
                    <form id="user-form" method="post">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>Author (disabled)</label>
                                    <input type="text" class="form-control" disabled="" placeholder="Company" value="Yusuf Yılmaz">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="text" class="form-control" name="Username" id="Username" placeholder="Username" value="@Model.Username">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" class="form-control" id="Mail" name="Mail" placeholder="Email" value="@Model.Mail">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Company" value="@Model.Name">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Last Name" value="@Model.LastName">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Short Description</label>
                                    <textarea rows="2" class="form-control" id="ShortDescription" name="ShortDescription" placeholder="Here can be your short description" value="Mike">@Model.ShortDescription</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>About Me</label>
                                    <textarea rows="7" class="form-control" id="AboutMe" name="AboutMe" placeholder="Here can be your description" value="Mike">@Model.AboutMe</textarea>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-info btn-fill pull-right" id="send">Update Profile</button>
                        <div class="clearfix"></div>
                    </form>


                    <script>

                        document.getElementById('send').addEventListener('click', function (e) {


                            let data = {
                                Username: document.getElementById('Username').value,
                                Mail: document.getElementById('Mail').value,
                                Name: document.getElementById('Name').value,
                                LastName: document.getElementById('LastName').value,
                                ShortDescription: document.getElementById('ShortDescription').value,
                                AboutMe: document.getElementById('AboutMe').value
                            }

                            e.preventDefault();

                            let xhttp = new XMLHttpRequest();

                            xhttp.open('POST', '/Account/User/');

                            xhttp.onload = () => {
                                if (xhttp.status == 200) {
                                    if (xhttp.responseText != null) {
                                        alert("Success! <3");
                                    }
                                    else {
                                        alert("Ops!, try again later :(");
                                    }
                                }
                            }

                            xhttp.setRequestHeader('Content-type', 'application/json');

                            xhttp.send(JSON.stringify(data));
                        });

                    </script>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-user">
                <div class="image">
                    <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&amp;fm=jpg&amp;h=300&amp;q=75&amp;w=400" alt="...">
                </div>
                <div class="content">
                    <div class="author">
                        <img class="avatar border-gray" src="~/Content/img/@Model.Image" alt="...">

                        <h4 class="title">
                            @(Model.Name + " " + Model.LastName)<br>
                            <small>@Model.Username</small>
                        </h4>
                    </div>
                    <p class="description text-center">
                        @Model.ShortDescription
                    </p>
                </div>
                <hr>
                <div class="text-center">
                    <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                    <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                    <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>

                </div>
            </div>
        </div>

    </div>
</div>
